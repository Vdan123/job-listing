<table class="table table-bordered">
<li><%= link_to("按照薪资上限排序", jobs_path(order: "by_upper_bound"))%></li>
<li><%= link_to("按照资金下限排序", jobs_path(order: "by_lower_bound"))%></li>
<li><%= link_to("时间排序", jobs_path)%></li>
<thead>
  <tr>
    <td>职位</td>
    <td>薪资下限</td>
    <td>薪资上限</td>
    <td>刊登时间</td>
  </tr>
</thead>
<tbody>
  <% @jobs.each do |job| %>

  <tr>

    <td><%= link_to(job.title, job_path(job)) %></td>
    <td><%= job.wage_lower_bound %></td>
    <td><%= job.wage_upper_bound %></td>
    <td><%= job.created_at %></td>
  </tr>
  <% end %>
</tbody>
</table>
